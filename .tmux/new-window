#!/usr/bin/tmux bloomberg-window

new-window

# Thin pane 0 on the left.
# Wide pane 1 in the center
# Thin panes 2 and 3 on the right top and bottom
split-window -t 0 -h
resize-pane -t 0 -x 98
split-window -t 1 -h
resize-pane -t 2 -x 98
split-window -t 2 -v

send-keys -t 2 'ssh ibm2' enter C-l
send-keys -t 3 'ssh ibm2' enter C-l
