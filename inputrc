# Use Vi, not Emacs, style editing
set editing-mode vi

"\e[A": history-search-backward
"\e[B": history-search-forward
"\C-l":'clear\n'

# for fzf completion like Ctrl+P in vim
"\C-p":'~~\t'

set keymap vi-command
"gg": beginning-of-history
"G": end-of-history
set keymap vi-insert
"jj": vi-movement-mode
"jk": vi-movement-mode
"kj": vi-movement-mode
"kk": vi-movement-mode
